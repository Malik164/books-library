<div class="form-group my-2">
    <label for="title">Book Title:*</label>
    <input type="text" class="form-control" value="<%=book.title%>" id="title" name="title" placeholder="title goes here.." required>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group my-1">
        <label for="author">Author:*</label>
        <input type="text" class="form-control" value="<%=book.author%>" id="author" name="author" required>
      </div>
      <div class="form-group my-1">
        <label for="pages">Pages:*</label>
        <input type="number" class="form-control" value="<%=book.pages%>" id="pages" name="pages" required>
      </div>
      <div class="form-group my-2">
        <label for="description">Book Description*</label>
        <textarea name="description" id="description" cols="30" rows="10" class="form-control" required><%= book.description %> </textarea>
      </div>
    </div>
    <div class="col-md-6">
          <div class="file-box">
            <label for="cover">Book Cover*</label>
            <input class="filepond" type="file" name="cover" id="cover" required title="Add Book Cover Image">

          </div>
    </div>
  </div>
  