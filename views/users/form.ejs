<%-include('../partials/header') %>
<%-include('../partials/nav') %>
<div class="main">  	
    <input type="checkbox" id="chk" aria-hidden="true">
        <div class="login">
            <form method="post" action="/users/login">
                <label for="chk" aria-hidden="true">Login</label>
                <input type="email" name="email" placeholder="Email" required=""  title="Enter a valid Email Addresss " pattern="[-a-zA-Z0-9~!$%^&amp;*_=+}{'?]+(\.[-a-zA-Z0-9~!$%^&amp;*_=+}{'?]+)*@([a-zA-Z0-9_][-a-zA-Z0-9_]*(\.[-a-zA-Z0-9_]+)*\.([cC][oO][mM]))(:[0-9]{1,5})?$">
                <input type="password" name="password" placeholder="Password" required="">
                <button>Login</button>
            </form>
        </div>
        <div class="sign-in">
            <form method="post" action="/users/new">
                <label for="chk" aria-hidden="true">Sign up</label>
                <input type="text" value="<%=user.uname%>" name="uname" placeholder="User name" required="">
                <input type="email" value="<%=user.email%>" name="email" placeholder="Email" required="" title="Enter a valid Email Addresss " pattern="[-a-zA-Z0-9~!$%^&amp;*_=+}{'?]+(\.[-a-zA-Z0-9~!$%^&amp;*_=+}{'?]+)*@([a-zA-Z0-9_][-a-zA-Z0-9_]*(\.[-a-zA-Z0-9_]+)*\.([cC][oO][mM]))(:[0-9]{1,5})?$">
                <input type="password" value="<%=user.password%>" name="password" placeholder="Password" required="" minlength="3">
                <button>Sign up</button>
            </form>
        </div>
</div>

<%-include('../partials/footer') %>
